#!/bin/bash -e

while [ "$1" != "" ]; do
    name=$(basename "$1")
    file=$(readlink -f "$1")
    mount=$(findmnt -fno TARGET --target "$file")
    if [ ! -d "$mount/backup/rclone" ]; then
        echo "$1: not applicable" >&2
        break
    fi
    name=$(echo "$file" | sed "s|$mount||")
    # check whether already marked
    name2="$name"
    left=$(dirname "/$name2")
    while [ "$left" != "/" ]; do
        name2=$(dirname "/$name2")
        if [ -L "$mount/backup/rclone/$name2" ]; then
            echo "$name: already marked at $name2" >&2
            break
        fi
    left=$(dirname "/$name2")
    done
    left=$(dirname "/$name2")
    if [ "$left" != "/" ]; then
        break
    fi
    d=$(dirname "$name")
    mkdir -p "$mount/backup/rclone/$d"
    pushd "$mount/backup/rclone/$d"
        parent=../../$(echo "$d" | awk -F/ '{print NF}' | xargs -INF seq -s "../" 0 NF | tr -d '[0-9]')
        ln -snv "$parent$name" "$name"
    popd
    shift
done
