#!/bin/bash -e

if [ $# -ne 1 ]; then
    echo "require one keyword" >&2
    exit 1
fi

ret=$(find . -type f "$1" || echo '')
if [ "$ret" = "" ]; then
    echo "keyword '$1' not found" >&2
    exit 1
else
    echo "$ret"
    echo ""
    read -p "continue?[Y/n]:" yn
    if [ "$yn" = "" -o "$yn" = "Y" -o "$yn" = "y" ]; then
        mkdir "$1"
        mv $ret "$1"
    fi
fi


